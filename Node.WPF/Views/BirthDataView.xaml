<UserControl x:Class="Node.WPF.Views.BirthDataView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <StackPanel Margin="20" Width="420">

        <TextBlock Text="Birth data" FontSize="22" Margin="0,0,0,12"/>

        <TextBlock Text="Birth date (UTC)"/>
        <DatePicker SelectedDate="{Binding BirthDate}" Margin="0,0,0,10"/>

        <TextBlock Text="Birth time (UTC, HH:mm)"/>
        <TextBox Text="{Binding BirthTime, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>

        <TextBlock Text="Birth place"/>
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <TextBox Width="300"
                     Text="{Binding BirthPlace, UpdateSourceTrigger=PropertyChanged}" />
            <Button Content="Find"
                    Width="70"
                    Margin="10,0,0,0"
                    Command="{Binding FindLocationCommand}" />
        </StackPanel>

        <TextBlock Text="Latitude"/>
        <TextBox Text="{Binding BirthLatitude, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>

        <TextBlock Text="Longitude"/>
        <TextBox Text="{Binding BirthLongitude, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,16"/>

        <Button Content="Save + Calculate Chart"
                Command="{Binding SaveCommand}"
                Height="36"/>

        <TextBlock Text="{Binding StatusText}"
                   Margin="0,12,0,0"
                   TextWrapping="Wrap"/>
    </StackPanel>

</UserControl>
