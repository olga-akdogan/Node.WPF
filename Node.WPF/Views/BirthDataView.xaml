<UserControl x:Class="Node.WPF.Views.BirthDataView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <StackPanel Margin="40" Width="420">
        <TextBlock Text="Birth data" FontSize="26" Margin="0,0,0,20"/>

        <TextBlock Text="Birth date (UTC)"/>
        <DatePicker x:Name="BirthDatePicker" Margin="0,0,0,10"/>

        <TextBlock Text="Birth time (UTC)  (HH:mm)"/>
        <TextBox x:Name="BirthTimeBox" Text="12:00" Margin="0,0,0,10"/>

        <TextBlock Text="Birth place"/>
        <TextBox x:Name="BirthPlaceBox" Margin="0,0,0,10"/>

        <TextBlock Text="Latitude"/>
        <TextBox x:Name="BirthLatBox" Margin="0,0,0,10"/>

        <TextBlock Text="Longitude"/>
        <TextBox x:Name="BirthLonBox" Margin="0,0,0,20"/>

        <Button Content="Save birth data" Height="40" Click="Save_Click"/>
        <TextBlock x:Name="ErrorText" Foreground="Tomato" Margin="0,10,0,0"/>
    </StackPanel>
</UserControl>
