<UserControl x:Class="Node.WPF.Views.ProfileView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ScrollViewer>
        <StackPanel Margin="40" MaxWidth="900">

            <TextBlock Text="Profile" FontSize="32" Margin="0,0,0,8"/>
            <TextBlock Text="{Binding DisplayName}" FontSize="18"/>
            <TextBlock Text="{Binding Email}" Opacity="0.7" Margin="0,0,0,20"/>

            <Border BorderBrush="#DDD" BorderThickness="1" CornerRadius="10" Padding="16" Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="Birth data" FontSize="18" Margin="0,0,0,10"/>
                    <TextBlock Text="{Binding StatusText}" Margin="0,0,0,10" TextWrapping="Wrap"/>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                        <TextBlock Text="Birth place: " FontWeight="SemiBold"/>
                        <TextBlock Text="{Binding Profile.BirthPlace}"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                        <TextBlock Text="Birth time (UTC): " FontWeight="SemiBold"/>
                        <TextBlock Text="{Binding Profile.BirthDateTimeUtc}"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                        <TextBlock Text="Latitude / Longitude: " FontWeight="SemiBold"/>
                        <TextBlock>
                            <Run Text="{Binding Profile.BirthLatitude}"/>
                            <Run Text=", "/>
                            <Run Text="{Binding Profile.BirthLongitude}"/>
                        </TextBlock>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                        <TextBlock Text="Natal chart ready: " FontWeight="SemiBold"/>
                        <TextBlock Text="{Binding HasChart}"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal"
                                Margin="0,14,0,0"
                                HorizontalAlignment="Center">
                        <Button Content="Edit birth data"
                                Command="{Binding EditBirthDataCommand}"
                                Width="160"/>
                    </StackPanel>


                    <TextBlock Text="AI Love Profile"
                               FontSize="16"
                               Margin="0,18,0,6"/>

                    <Button Content="Generate AI Love Profile"
                            Command="{Binding GenerateLoveProfileCommand}"
                            Width="220"/>

                    <TextBox Text="{Binding LoveProfileText}"
                             Margin="0,10,0,0"
                             Height="220"
                             TextWrapping="Wrap"
                             AcceptsReturn="True"
                             IsReadOnly="True"
                             VerticalScrollBarVisibility="Auto"/>
                </StackPanel>
            </Border>

        </StackPanel>
    </ScrollViewer>
</UserControl>